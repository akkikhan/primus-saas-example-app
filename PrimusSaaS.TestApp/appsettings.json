{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.AspNetCore.Authentication": "Debug"
    }
  },
  "PrimusLogging": {
    "ApplicationName": "PrimusSaaS.TestApp",
    "Environment": "development",
    "MinimumLevel": "Debug",
    "Console": {
      "Enabled": true,
      "Format": "json"
    },
    "File": {
      "Enabled": true,
      "Path": "logs/app-{Date}.log",
      "RollingInterval": "Day",
      "RetainedFileCountLimit": 7,
      "FileSizeLimitBytes": 10485760
    },
    "Enrichers": [
      "Environment",
      "MachineName",
      "ThreadId"
    ],
    "PIIMasking": {
      "Enabled": true,
      "MaskPatterns": [
        "password",
        "ssn",
        "credit",
        "apikey",
        "secret"
      ]
    }
  },
  "AllowedHosts": "*",
  "PrimusIdentity": {
    "Issuers": [
      {
        "Name": "LocalAuth",
        "Type": "Jwt",
        "Issuer": "https://localhost:5001",
        "Secret": "ThisIsAVerySecureSecretKeyForTestingPurposes123456!",
        "Audiences": [ "api://primus-test-app" ]
      }
    ],
    "RequireHttpsMetadata": false,
    "ValidateLifetime": true,
    "ClockSkew": "00:05:00"
  }
}
